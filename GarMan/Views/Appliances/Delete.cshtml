@model GarMan.Models.Appliance

@{
    ViewData["Title"] = "Delete Appliance";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Warning:</strong> Are you sure you want to delete this appliance collection request?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ApplianceType)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ApplianceType)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Brand)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Brand)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ModelNumber)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ModelNumber)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Condition)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Condition)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CollectionAddress)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CollectionAddress)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DateSubmitted)</dt>
                        <dd class="col-sm-8">@Model.DateSubmitted.ToString("MMMM dd, yyyy")</dd>
                    </dl>
                    
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
