@model GarMan.Models.Appliance

@{
    ViewData["Title"] = "Edit Appliance";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="DateSubmitted" />
                        <input type="hidden" asp-for="UserId" />

                        <h4 class="mb-3">Appliance Information</h4>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ApplianceType" class="form-label"></label>
                                <input asp-for="ApplianceType" class="form-control" />
                                <span asp-validation-for="ApplianceType" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Brand" class="form-label"></label>
                                <input asp-for="Brand" class="form-control" />
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ModelNumber" class="form-label"></label>
                                <input asp-for="ModelNumber" class="form-control" />
                                <span asp-validation-for="ModelNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="YearOfManufacture" class="form-label"></label>
                                <input asp-for="YearOfManufacture" class="form-control" type="number" />
                                <span asp-validation-for="YearOfManufacture" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Condition" class="form-label"></label>
                                <select asp-for="Condition" class="form-select"
                                        asp-items="Html.GetEnumSelectList<GarMan.Models.ApplianceCondition>()"></select>
                                <span asp-validation-for="Condition" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label"></label>
                                <select asp-for="Status" class="form-select"
                                        asp-items="Html.GetEnumSelectList<GarMan.Models.CollectionStatus>()"></select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Weight" class="form-label"></label>
                                <input asp-for="Weight" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EstimatedValue" class="form-label"></label>
                                <input asp-for="EstimatedValue" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="EstimatedValue" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>



                        @if (!User.IsInRole("User"))
                        {
                            <hr class="my-4" />
                            <h4 class="mb-3">Recycling Information</h4>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="RecyclingStatus" class="form-label"></label>
                                    <select asp-for="RecyclingStatus" class="form-select"
                                            asp-items="Html.GetEnumSelectList<GarMan.Models.RecyclingStatus>()"></select>
                                    <span asp-validation-for="RecyclingStatus" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="RecycledValue" class="form-label"></label>
                                    <input asp-for="RecycledValue" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="RecycledValue" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="RecyclingComment" class="form-label"></label>
                                <textarea asp-for="RecyclingComment" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="RecyclingComment" class="text-danger"></span>
                            </div>
                        }

                        <hr class="my-4" />
                        <h4 class="mb-3">Collection Details</h4>

                        <div class="mb-3">
                            <label asp-for="CollectionFee" class="form-label"></label>
                            <input asp-for="CollectionFee" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="CollectionFee" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CollectionAddress" class="form-label"></label>
                            <input asp-for="CollectionAddress" class="form-control" />
                            <span asp-validation-for="CollectionAddress" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CollectionDate" class="form-label"></label>
                            <input asp-for="CollectionDate" class="form-control" type="date" />
                            <span asp-validation-for="CollectionDate" class="text-danger"></span>
                        </div>

                        <hr class="my-4" />
                        <h4 class="mb-3">Contact Information</h4>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="CustomerName" class="form-label"></label>
                                <input asp-for="CustomerName" class="form-control" />
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CustomerPhone" class="form-label"></label>
                                <input asp-for="CustomerPhone" class="form-control" />
                                <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CustomerEmail" class="form-label"></label>
                            <input asp-for="CustomerEmail" class="form-control" type="email" />
                            <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}