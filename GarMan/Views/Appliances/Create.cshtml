@model GarMan.Models.Appliance

@{
    ViewData["Title"] = "Request Appliance Collection";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <h4 class="mb-3">Appliance Information</h4>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ApplianceType" class="form-label"></label>
                                <input asp-for="ApplianceType" class="form-control"
                                       placeholder="e.g., Refrigerator, Washing Machine" />
                                <span asp-validation-for="ApplianceType" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Brand" class="form-label"></label>
                                <input asp-for="Brand" class="form-control"
                                       placeholder="e.g., Samsung, LG, Whirlpool" />
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ModelNumber" class="form-label"></label>
                                <input asp-for="ModelNumber" class="form-control" />
                                <span asp-validation-for="ModelNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="YearOfManufacture" class="form-label"></label>
                                <input asp-for="YearOfManufacture" class="form-control" type="number" min="1950"
                                       max="2026" />
                                <span asp-validation-for="YearOfManufacture" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Condition" class="form-label"></label>
                                <select asp-for="Condition" class="form-select"
                                        asp-items="Html.GetEnumSelectList<GarMan.Models.ApplianceCondition>()"></select>
                                <span asp-validation-for="Condition" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Weight" class="form-label"></label>
                                <input asp-for="Weight" class="form-control" type="number" step="0.01"
                                       placeholder="Approximate weight" />
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"
                                      placeholder="Additional details about the appliance condition or special handling requirements"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EstimatedValue" class="form-label"></label>
                            <input asp-for="EstimatedValue" class="form-control" type="number" step="0.01"
                                   placeholder="Estimated value" />
                            <span asp-validation-for="EstimatedValue" class="text-danger"></span>
                        </div>

                        <hr class="my-4" />
                        <h4 class="mb-3">Collection Details</h4>

                        <div class="mb-3">
                            <label asp-for="CollectionFee" class="form-label"></label>
                            <input asp-for="CollectionFee" class="form-control" type="number" step="10.00" value="50"
                                   readonly />
                            <span asp-validation-for="CollectionFee" class="text-danger"></span>

                        </div>

                        <div class="mb-3">
                            <label asp-for="CollectionAddress" class="form-label"></label>
                            <input asp-for="CollectionAddress" class="form-control"
                                   placeholder="Full address where appliance is located" />
                            <span asp-validation-for="CollectionAddress" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CollectionDate" class="form-label"></label>
                            <input asp-for="CollectionDate" class="form-control" type="date" />
                            <span asp-validation-for="CollectionDate" class="text-danger"></span>
                            <small class="form-text text-muted">Preferred collection date (optional)</small>
                        </div>

                        <hr class="my-4" />
                        <h4 class="mb-3">Contact Information</h4>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="CustomerName" class="form-label"></label>
                                <input asp-for="CustomerName" class="form-control" />
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CustomerPhone" class="form-label"></label>
                                <input asp-for="CustomerPhone" class="form-control" type="tel"
                                       placeholder="(555) 123-4567" />
                                <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CustomerEmail" class="form-label"></label>
                            <input asp-for="CustomerEmail" class="form-control" type="email" />
                            <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success">Submit Request</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}